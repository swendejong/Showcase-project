@{
    ViewData["Title"] = "Wordle";
}

<div class="wordle-title-container">
    <h1 class="wordle-title">Wordle</h1>
</div>

<div class="wordle-game-container">
    <div class="welcome-text">
        <p>Welcome to Wordle! Choose your game mode and start playing!</p>
    </div>

    <div class="buttons-container">
        <!-- Single Player Button -->
        <form method="get" action="@Url.Action("SinglePlayer", "Wordle")" class="singleplayer-game-form">
            <button action="@Url.Action("SinglePlayer", "Wordle")" type="submit" class="single-player-button" onclick="setGameMode('single')">Single Player</button>
        </form>

        <!-- Create Online Game Button -->
        <form method="post" asp-action="CreateGame" class="create-game-form">
            <button type="submit" class="create-game-button" onclick="setGameMode('multiplayer')">Create Online game</button>
        </form>

        <!-- Join Online Game Button -->
        <form method="get" action="@Url.Action("JoinGame", "Wordle")" class="join-game-form">
            <button type="submit" class="join-game-button" onclick="setGameMode('multiplayer')">Join Online Game</button>
        </form>
    </div>

    <!-- Exit Button -->
    <div class="exit-button-container">
        <form method="get" action="@Url.Action("Index", "Home")" class="exit-game-form">
            <button type="submit" class="exit-button" onclick="clearGameMode()">Exit</button>
        </form>
    </div>
</div>

<!-- Login Icon Button -->
<div class="login-icon-container">
    <form method="get" action="@Url.Action("Login", "Wordle")" class="login-form">
        <button type="submit" class="login-icon-button">
            <i class="fas fa-user"></i> <!-- FontAwesome user icon -->
        </button>
    </form>
</div>

<script>
    function setGameMode(mode) {
        localStorage.setItem("gameMode", mode);
    }

    function clearGameMode() {
        localStorage.removeItem("gameMode");
    }
</script>

<!-- Include FontAwesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

